  }
  .card-image{
    height: 250px;
    margin-bottom: 15px;
    background-size: cover;
    border-radius: 15px 15px 0 0;
  }
  .about-img1{
    background-image: url('img/1x1\ photo.jpg');
  }
  .about-img2{
    background-image: url('img/1x1\ photo.jpg');
  }
  .about-text-box{
    padding: 10px;
  
  }
  .name1{
    display: flex;
  }
  .name{
