.bcard{
    width: 100%;
    max-width: 400px;
    background-color: #070606;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 6px;
    position: absolute;
    top: 80%;
    left: 50%;
    transform: translate(-120%, -50%) scale(0.1);
    text-align: center;
    padding: 0 30px 30px;
    color: #333;
    visibility: hidden;
    transition: transform 0.4s, top 0.4s;
  }
  .open-bcard{
    visibility: visible;
    top: 50%;
    transform: translate(-50%, -50%) scale(1);
  }
  .bcard img{
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }
  .bcard-infos{
    margin-top: -10.5rem;
    margin-left: 3.5rem;
    text-align: left;
    line-height: 0.3rem;
  }
  .company-name{
    font-size: 1rem;
  }
  .Website{
    font-size: 12px;
  }
  .bcard-infos .info-h6{
    margin-top: 2.8rem;
  }
  .bcard-infos h6{
    margin-top: -1rem;
  }
  .bcard-infos .title{
    font-size: 13px;
    margin-top: -0.8rem;
  }
  .bcard h2{
    color: #fff;
  }
  .bcard button{
    border-radius: 15%;
    margin-top: 5%;
    background-color: hsl(var(--hue-color), 57%, 53%);
    border-color: hsl(var(--hue-color), 57%, 53%);
    cursor: pointer;
  }
  .bcard i{
    font-size: 1.2rem;
    color: #fff;
    font-weight: 700;
  }
  .button--flex{
    display: inline-flex;
    align-items: center;
  }
  
  /*==================== ABOUT ====================*/
  .about-container{
    font-family: var(--body-font);
    display: flex;
